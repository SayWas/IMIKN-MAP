<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IMIKN_MAP.Views.MapPage"
             xmlns:vm="clr-namespace:IMIKN_MAP.ViewModels"
             xmlns:controls="clr-namespace:IMIKN_MAP.Controls"
             Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <vm:MapViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid>
        <controls:Map Source="Map" Floors="1" HorizontalOptions="Fill" VerticalOptions="Fill"/>
        <StackLayout HorizontalOptions="End" VerticalOptions="Center" Orientation="Vertical" Margin="10">
            <controls:SvgImage Source="Me.svg" WidthRequest="40" HeightRequest="40" HorizontalOptions="Center" VerticalOptions="Center"/>
            <controls:SvgImage Source="Me.svg" WidthRequest="40" HeightRequest="40" HorizontalOptions="Center" VerticalOptions="Center"/>
        </StackLayout>
    </Grid>
